@{
    ViewData["Title"] = "Home Page";
}
@model List<PDPDay3View.Models.Item>

<style>
    .section-title {
        background: var(--bs-primary);
        color: #fff;
        padding: .5rem .75rem;
        border-radius: .375rem;
        font-weight: 600;
        margin-top: .75rem;
        margin-bottom: .75rem;
    }
    .product-card {
        border: 1px solid #e3e3e3;
        border-radius: .5rem;
        box-shadow: 0 0 0 rgba(0,0,0,0);
        transition: box-shadow .2s ease, transform .2s ease;
        height: 100%;
        background: #fff;
    }
    .product-card:hover {
        box-shadow: 0 6px 16px rgba(0,0,0,.08);
        transform: translateY(-2px);
    }
    .product-card img {
        width: 100%;
        height: 180px;             
        object-fit: contain;       
        padding: .75rem;
        border-bottom: 1px solid #efefef;
        border-top-left-radius: .5rem;
        border-top-right-radius: .5rem;
        background: #fff;
    }
    .product-name {
        font-size: 1.05rem;
        font-weight: 600;
        color: #2b2b2b;
        margin: .25rem 0 0;
        text-align: left;
    }
    .split-bar {
        height: 6px;
        background: #9ad24b;     
        border-radius: 999px;
        margin: .75rem 0 1rem;
    }
</style>

<div class="row">
    <div class="col-12 col-lg-3">
        @await Html.PartialAsync("_MenuPartialView")
    </div>

    <div class="col-12 col-lg-9">
        <div class="section-title">Sản phẩm mới nhất</div>
        <div class="row g-3">
            @foreach (var item in Model)
            {
                <div class="col-12 col-sm-6 col-lg-4">
                    <div class="product-card">
                        <img src="@item.Img" alt="@item.Name" />
                        <div class="p-3">
                            <p class="product-name">@item.Name</p>
                        </div>
                    </div>
                </div>
            }
        </div>
        <div class="split-bar"></div>
        <div class="section-title">Sản phẩm bán chạy</div>
        @await Component.InvokeAsync("HotItem")
    </div>
</div>
